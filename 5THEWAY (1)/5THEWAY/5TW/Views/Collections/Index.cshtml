@model _5TW.Models.CollectionViewModel

<div class="navbar-collapse collapse" style="background-color:#cccccc; width: 100%">
    <ul class="nav navbar-nav" style="margin-left:100px;">
        <li style="font-size:22px;">@*@Html.ActionLink("Collections", "Collections", "Home")*@<h2 style="padding-bottom:10px; padding-top:10px; line-height:20px">Collections</h2></li>
    </ul>
</div>
@foreach (var item in Model.lsCollections)
{
    <div class="item">
        <img src="@item.CoverPicture" style="width: 100%; height:600px; position:relative;">
        <div class="col-sm-12">
            <div class="hero-text" style="bottom:10%;">
                <h2 class="headline" style="text-align:center;color:#000000; background:rgba(255,255,255,0.3); margin-left:25%; margin-right:25%;">@item.CollectionName</h2>
                <p class="subheadline" style="color:#ffffff; background:rgba(0,0,0,0.3); margin-left:25%; margin-right:25%;">
                    @item.Descriptions
                </p>
                <p>@Html.RouteLink("Learn more", new { action = "Details", controller = "Collections", id =item.CollectionID})</p>
            </div>
        </div>
        
    </div>
}
