@model _5TW.Models.BottomViewModel
@{
    ViewBag.Title = "GetProductType";
}
<link href="~/Content/marleyEffect.css" rel="stylesheet" />
<div class="navbar-collapse collapse" style="background-color:#cccccc; width: 100%">
    <div class="navbar-collapse collapse" style="background-color:#cccccc; width: 100%">
        <ul class="nav navbar-nav" style="margin-left:350px;">
            <li class="li-header">@Html.RouteLink(Model.AllBottomTypes[0], new { action = "Bottom", controller = "Products", idtype = 5 })</li>
            <li class="li-header">@Html.RouteLink(Model.AllBottomTypes[1], new { action = "Bottom", controller = "Products", idtype = 6 })</li>
            <li class="li-header">@Html.RouteLink(Model.AllBottomTypes[2], new { action = "Bottom", controller = "Products", idtype = 7 })</li>
            <li class="li-header">@Html.RouteLink(Model.AllBottomTypes[3], new { action = "Bottom", controller = "Products", idtype = 8 })</li>
        </ul>
    </div>
</div>
    <h2>@Model.Title</h2>
<div class="container"style="background-color:#f8f8f8">
    <div>
        @foreach (var item in Model.lsBottomProducts)
        {
            <div class="col-sm-6"  style="top:10px; padding-left:5px; padding-right:5px; padding-top:5px; padding-bottom:10px;">
                <figure class="effect-marley">
                    @{
                        var imgPaths = item.Picture.Split(';');
                    }
                    <img src="@imgPaths[0]" style="width: 100%; height: 400px;" />
                    <figcaption>
                        <h2 style="color: #b21137">@item.Name</h2>
                        <p style="color: #b21137">
                            <b>
                                Collection: @item.Collection.CollectionName <br />
                                Size: @item.Size <br />
                                Price: @item.Price <br />
                                @Html.ActionLink("Details", "Details", new { id = item.ProID })
                            </b>
                        </p>

                    </figcaption>
                </figure></div>
        }
    </div>
</div>