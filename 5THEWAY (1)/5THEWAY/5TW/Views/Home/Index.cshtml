@{
    ViewBag.Title = "5THEWAY";
}
<link href="~/Content/indexStyle.css" rel="stylesheet"/>
<div class="container-fluid" style="margin-right:0px; margin-left:0;">
    <div id="myCarousel" class="carousel slide" data-ride="carousel">
        <!-- Indicators -->
        <ol class="carousel-indicators">
            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
            <li data-target="#myCarousel" data-slide-to="1"></li>
            <li data-target="#myCarousel" data-slide-to="2"></li>
        </ol>

        <!-- Wrapper for slides -->
        <div class="carousel-inner">

            <div class="item active">
                <img src="~/IMGSlider/1.jpg" alt="False GOD hoodie" style="width:100%; height:575px;">
                <div class="carousel-caption">
                    <h3>False GOD</h3>
                    <p>Hoodie False GOD from Perfection collection</p>
                </div>
            </div>

            <div class="item">
                <img src="~/IMGSlider/2.jpg" alt="Long Sleeve YearOne" style="width:100%; height:575px;">
                <div class="carousel-caption">
                    <h3>Long Sleeve</h3>
                    <p>One of many hot item from 5TW</p>
                </div>
            </div>

            <div class="item">
                <img src="~/IMGSlider/track.jpg" alt="TrackPant" style="width: 100%; height:575px;">
                <div class="carousel-caption">
                    <h3>TrackPant</h3>
                    <p>A product of signature collection</p>
                </div>
            </div>

        </div>

        <!-- Left and right controls -->
        <a class="left carousel-control" href="#myCarousel" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#myCarousel" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</div>

<div class="row" style="margin-left:0px; margin-top:1.5px; margin-right:0px;">

    <div class="Collection col-md-3">
        <h2>Collection</h2>
        <a class="btn btn-default" href="@Url.Action("Index","Collections")">Learn more &raquo;</a>
    </div>

    <div class="Collab col-md-3">
        <h2>Collaboration</h2>

        <a class="btn btn-default" href="@Url.Action("Collaboration", "Home",null)">Learn more &raquo;</a>
    </div>


        <div class="OOTD col-md-3">
            <h2 style="text-align:right;">Out Fit Of Theday</h2>
            <a class="btn btn-default" href="@Url.Action("OOTD", "Home",null)">Learn more &raquo;</a>  
            <a class="btn btn-default" style="float:right;" href="https://www.youtube.com/channel/UC2XbDR0Qqsd5OmdGdU8JYHg" target="_blank">Watch more video &raquo;</a>
</div>


    <div class="Acessories col-md-3">
        <h2 style="text-align:left;">Accessories</h2>
        <a class="btn btn-default" href="@Url.Action("Accessories", "Products",null)">Learn more &raquo;</a>
    </div>
</div>